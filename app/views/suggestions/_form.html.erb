<%= form_for(@suggestion, html: { class: "form-horizontal", role: "form", multipart: true }) do |f| %>
  <% if @suggestion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@suggestion.errors.count, "error") %> prohibited this suggestion from being saved:</h2>

      <ul>
      <% @suggestion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-1 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-1 control-label" %>
    <div class="col-sm-6">
      <%= f.text_area :description, class: "form-control", rows: 10 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, class: "col-sm-1 control-label" %>
    <div class="col-sm-6">
      <%= f.file_field :image, class: "form-control", rows: 10 %>
    </div>
  </div>
  <div class="form-group col-md-6 pull-right">
    <%= f.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>
